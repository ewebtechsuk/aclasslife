/* Luxury homepage layout */
.homepage-hero {
    position: relative;
    min-height: 100vh;
    overflow: hidden;
    color: #fff;
}

.homepage-hero .hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
}

.homepage-hero .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.homepage-hero .hero-content {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    text-align: center;
    padding: 3rem 1.5rem;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.35) 0%, rgba(0, 0, 0, 0.7) 100%);
}

.homepage-hero h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 4vw, 4rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
}

.homepage-hero p {
    font-size: 1.2rem;
    max-width: 720px;
    margin: 0 auto 2rem;
}

.homepage-hero .button.hero-cta {
    background: #d4af37;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 1rem 2.5rem;
}

.homepage-services,
.homepage-fleet,
.homepage-testimonials,
.homepage-cta {
    padding: 4rem 0;
}

.homepage-services {
    background: #f8f8f8;
    text-align: center;
}

.services-grid {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 2rem;
}

.service-item {
    flex: 1 1 280px;
    max-width: 350px;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    padding: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-item img {
    width: 100%;
    border-radius: 8px;
}

.service-item h3 {
    font-size: 1.5rem;
    margin: 1rem 0 0.5rem;
}

.service-item p {
    color: #555;
    font-size: 1rem;
}

.service-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.12);
}

.homepage-fleet {
    text-align: center;
}

.fleet-grid {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 2rem;
}

.fleet-item {
    flex: 1 1 280px;
    max-width: 350px;
    text-align: left;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    padding: 1.5rem;
}

.fleet-item h3 {
    margin-top: 1rem;
    font-size: 1.3rem;
    color: #111;
}

.fleet-item p {
    color: #666;
    font-size: 0.95rem;
}

.fleet-price {
    font-weight: 600;
    margin: 1rem 0;
    color: #d4af37;
}

.fleet-cta {
    margin-top: 2rem;
}

.button {
    display: inline-block;
    padding: 0.8rem 1.8rem;
    border: none;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    background: #000;
    color: #fff;
    border-radius: 999px;
    transition: background 0.3s ease, color 0.3s ease;
}

.button:hover {
    background: #d4af37;
    color: #000;
}

.button-invert {
    background: #fff;
    color: #000;
}

.button-invert:hover {
    background: #d4af37;
    color: #000;
}

.homepage-testimonials {
    background: #f8f8f8;
    text-align: center;
}

.homepage-testimonials blockquote {
    font-style: italic;
    color: #444;
    margin-bottom: 2rem;
}

.homepage-testimonials footer {
    font-weight: 600;
    color: #111;
    margin-top: 0.5rem;
}

.homepage-cta {
    text-align: center;
    color: #fff;
    background: #000;
    padding: 4rem 1.5rem;
}

.homepage-cta p {
    max-width: 640px;
    margin: 0 auto 2rem;
}

@media (max-width: 768px) {
    .homepage-hero {
        min-height: 80vh;
    }

    .homepage-hero .hero-content {
        min-height: 80vh;
        padding: 4rem 1.5rem;
    }

    .service-item,
    .fleet-item {
        max-width: 100%;
    }
}

.container {
    width: min(1100px, 92%);
    margin: 0 auto;
}
